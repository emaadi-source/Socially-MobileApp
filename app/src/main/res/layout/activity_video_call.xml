<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/localVideoContainer"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnSwitchCamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_background_gray"
            android:padding="12dp"
            android:src="@drawable/camera_icon" 
            android:contentDescription="Switch Camera" />

        <ImageView
            android:id="@+id/btnMute"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_background_gray"
            android:padding="12dp"
            android:src="@drawable/mic_icon" 
            android:contentDescription="Mute" />

        <ImageView
            android:id="@+id/btnVideoToggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_background_gray"
            android:padding="12dp"
            android:src="@drawable/camera_icon" 
            android:contentDescription="Toggle Video" />

        <ImageView
            android:id="@+id/btnEndCall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background_red"
            android:padding="15dp"
            android:src="@drawable/end_call_icon"
            android:contentDescription="End Call" />

    </LinearLayout>

</RelativeLayout>
