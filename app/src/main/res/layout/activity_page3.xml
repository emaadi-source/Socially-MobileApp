<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/back_arrow_head"
        android:padding="4dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/pfp_image"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/generalbg" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Welcome back, username"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/generalbg" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:textStyle="bold"
        android:background="@drawable/greyish_button" />

    <Button
        android:id="@+id/btnSwitchAccount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="16dp"
        android:text="Switch Account"
        android:textStyle="bold"
        android:background="@drawable/greyish_button" />
</RelativeLayout>
