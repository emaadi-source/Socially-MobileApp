<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dm_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/back_arrow_head"
            android:tint="@color/generalbg" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Direct Messages"
            android:textColor="@color/generalbg"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Search bar -->
    <RelativeLayout
        android:id="@+id/searchRow"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/topBar"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/edit_text"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="8dp"
            android:hint="Search"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/searchRow"
        android:background="#EAEAEA" />

    <!-- Chats list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchRow"
        android:padding="6dp"
        android:clipToPadding="false" />

</RelativeLayout>
